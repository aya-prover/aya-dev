def overlap infix +' (a b : Nat) : Nat
 | a, 0 => a
 | a, suc b => suc (a +' b)
 tighter = ==< qed

def +'-comm (a b : Nat) : a +' b = b +' a
  | 0, 0 => idp
  | suc a, 0 => pmap suc (+'-comm a 0)
  | 0, suc b => pmap suc (+'-comm 0 b)
  | suc a, suc b => pmap suc (
    suc a +' b
  ==< +'-comm (suc a) b >==
    suc (b +' a)
  ==< pmap suc (sym (+'-comm a b)) >==
    suc (a +' b)
  ==< +'-comm a (suc b) >==
    suc b +' a
  qed
  )

